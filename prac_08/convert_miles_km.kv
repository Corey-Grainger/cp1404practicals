BoxLayout:
    orientation: "vertical"
    BoxLayout:
        TextInput:
            id: input_field
            text: ""
            on_text: app.handle_conversion(0)
        BoxLayout:
            orientation: "vertical"
            Button:
                id: up_button
                text: "Up"
                on_press: app.handle_conversion(1)
            Button:
                id: down_button
                text: "Down"
                on_press: app.handle_conversion(-1)
